<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints minWidth="10.0" prefWidth="50.0" />
      <ColumnConstraints minWidth="10.0" prefWidth="50.0" />
      <ColumnConstraints minWidth="10.0" prefWidth="50.0" />
      <ColumnConstraints minWidth="10.0" prefWidth="50.0" />
      <ColumnConstraints minWidth="10.0" prefWidth="50.0" />
   </columnConstraints>
   <children>
      <Button fx:id="btnPlus" maxHeight="30" maxWidth="30" minHeight="30" minWidth="30.0" mnemonicParsing="false" onAction="#plusClick" prefHeight="30" prefWidth="30.0" text="+" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
      <Button fx:id="btnMinus" maxHeight="30" maxWidth="30" minHeight="30" minWidth="30.0" mnemonicParsing="false" onAction="#minusClick" prefHeight="30" prefWidth="30.0" text="-" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
      <Button fx:id="btnMulti" maxHeight="30" maxWidth="30" minHeight="30" minWidth="30.0" mnemonicParsing="false" onAction="#multiClick" prefHeight="30" prefWidth="30.0" text="*" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
      <Button fx:id="btnDiv" maxHeight="30" maxWidth="30" minHeight="30" minWidth="30.0" mnemonicParsing="false" onAction="#divClick" prefHeight="30" prefWidth="30.0" text="/" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
      <Button fx:id="btnPerc" maxHeight="30" maxWidth="30" minHeight="30" minWidth="30.0" mnemonicParsing="false" onAction="#percClick" prefHeight="30" prefWidth="30.0" text="\%" GridPane.columnIndex="4" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
      <Label fx:id="lblNum" text="0" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
      <Spinner fx:id="txtFirst" maxWidth="100" minWidth="100.0" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
      <Spinner fx:id="txtSecond" maxWidth="100" minWidth="100.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
   </children>
</GridPane>
